<h1>{{title}}</h1>
<p>Welcome to  <strong>W</strong>orth<strong>Y</strong>our<strong>W</strong>eight<strong> I</strong>n...</p>

<!-- form for user input of name and weight -->
<form method="post" action="/">

  <input type="text" name="name" placeholder="Enter your name here...">
  <input type="text" name="weight" placeholder="Enter your weight here...">
  <input type="submit" value="submit" >

</form>


<!-- previous users display -->

<p>Everyone's values in gold</p>
    <ul>
  {{#each worths}}
  <li> <strong>{{name}}</strong>, $NZD {{value}} </li>
  {{/each}}
    </ul>

<!-- edit current user weight -->
<form>

  <input type= "text" name = "editWeight" placeholder = "Edit weight here...">
  <input type="submit" value="submit" >

</form>
