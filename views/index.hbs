<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

//form for user input of name and weight
<form method="post" action="/">

  <input type="text" name="name" placeholder="Enter your name here...">
  <input type="text" name="weight" placeholder="Enter your weight here...">
  <input type="submit" value="submit" >

</form>
  <p>Your name: {{name}}</p>
  <p>your weight: {{weight}}</p>
  <p>Your worth: {{worth}}</p>

  //previous users display
    <ul>
  {{#each worths}}
  <a href="/"><li> {{name}} </li></a>
  {{/each}}
    </ul>
